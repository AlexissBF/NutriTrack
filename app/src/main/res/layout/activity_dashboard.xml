<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_open_drawer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:contentDescription="Abrir menú" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Hola!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_app_gradient"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_balance_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_card_rounded"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_register_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/action_blue"
            android:textColor="@color/white"
            android:text="Registrar Alimento"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_register_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/action_blue"
            android:textColor="@color/white"
            android:text="Registrar Actividad" />

        <Button
            android:id="@+id/btn_view_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/action_blue"
            android:textColor="@color/white"
            android:text="Mi Perfil" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/action_blue"
            android:textColor="@color/white"
            android:text="Cerrar Sesión" />
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>